= simple_form_for @auction do |f|
  -if @auction.errors.any?
    #error_explanation
      %h2= "#{pluralize(@auction.errors.count, "error")} prohibited this auction from being saved:"
      %ul
        - @auction.errors.full_messages.each do |msg|
          %li= msg

  = f.input :title
  = f.input :price
  = f.input :state
  = f.input :city
  = f.input :zip_code
  = f.input :end_date, :discard_minute => true
  = f.input :kind
  = f.input :year
  = f.input :description
  = f.input :image, as: :file
  .actions
    = f.submit 'Save', :class => 'btn btn-primary'
    = link_to 'Back', auctions_path, :class => 'btn'
