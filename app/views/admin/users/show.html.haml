.well
  %h2= @user.name
  = link_to "â† Back to List", admin_users_path, :class => 'btn'
  = link_to "Bids", admin_user_bids_path(@user), :class => 'btn'
  = link_to "Send a Message", admin_user_messages_path(@user), :class => 'btn'
%dl.dlshow
  %dt Email
  %dd= @user.email

  %dt Nickname
  %dd= @user.nickname

  %dt Bids amount
  %dd= number_to_currency @user.bids_amount

  %dt Description
  %dd= @user.description

  %dt Is Admin?
  %dd= @user.admin?? "Yes" : "No"

  %dt Phone number
  %dd= @user.phone_number

  %dt Address
  %dd= @user.address

  %dt City
  %dd= @user.city

  %dt State
  %dd= @user.state.try(:name )

  %dt Bids
  %dd= @user.bids.count

  %dt Winner Bids
  %dd= @user.winner_bids.count

  %dt Account balance
  %dd= number_to_currency @user.account_balance

  %dt Locked balance
  %dd= number_to_currency @user.locked_balance

  %dt Available balance
  %dd= number_to_currency @user.available_balance

  %dt Zip
  %dd= @user.zip

