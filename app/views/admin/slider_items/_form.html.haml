= tinymce

= form_for [:admin, @admin_slider_item] do |f|
  -if @admin_slider_item.errors.any?
    #error_explanation
      %h2= "#{pluralize(@admin_slider_item.errors.count, "error")} prohibited this admin_page from being saved:"
      %ul
        - @admin_slider_item.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :url
    = f.text_field :url
  .field
    = f.label :image
    = f.text_field :image
  .field
    = f.label :content
    = f.text_area :content, class: "tinymce", :width => '100%'
    %br
  .actions
    = f.submit 'Save', :class => 'btn btn-primary'
    = link_to 'Back', admin_slider_items_path, :class => 'btn'
