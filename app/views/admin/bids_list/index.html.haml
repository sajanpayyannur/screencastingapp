.well
  .page-header
    %h1 Bids
  .row
    .span4
      = link_to "Download CSV", bids_list_csv_admin_bids_list_index_path(:csv), :class => 'btn'
%br

= will_paginate @bids

%h2 Bids
%table.table.table-striped.table-bordered
  %thead
    %tr
      %th Auction
      %th Lot number
      %th Auction price
      %th Bidder
      %th Value
      %th Winner
      %th Date
  %tbody
    - @bids.each do |bid|
      %tr
        %td= bid.auction.title
        %td= bid.auction.lot_number
        %td= number_to_currency bid.auction.price
        %td= link_to bid.user.email, admin_user_path(bid.user)
        %td= number_to_currency bid.value
        %td= bid.winner
        %td= bid.created_at.strftime("%D")

