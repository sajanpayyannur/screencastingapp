%h1 Pages

%table.table.table-bordered.table-striped
  %tr
    %th Title
    %th Slug
    %th Publish
    %th
    %th
    %th

  - @admin_pages.each do |admin_page|
    %tr
      %td= admin_page.title
      %td= admin_page.slug
      %td= admin_page.publish
      %td= link_to 'Show', admin_page
      %td= link_to 'Edit', edit_admin_page_path(admin_page)
      %td= link_to 'Destroy', admin_page, :confirm => 'Are you sure?', :method => :delete unless admin_page.protected_slug?

%br

= link_to 'New Page', new_admin_page_path
