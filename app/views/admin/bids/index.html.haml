.well
  %h2= @user.name
  = link_to "← Back to User", admin_user_path(@user), :class => 'btn'

%br
%br

%table.table.table-bordered.table-striped
  %thead
    %tr
      %th Auction
      %th Value
      %th Status
      %th Date
  %tbody
    - @bids.each do |bid|
      %tr
        %td= bid.auction.title
        %td= number_to_currency bid.value
        %td= bid_status_tag bid
        %td= bid.created_at.strftime("%D")

        %td
          =link_to content_tag(:i, "", class: 'icon-info-sign'), admin_user_bid_path(@user, bid)
          -#=link_to content_tag(:i, "", class: 'icon-pencil'), edit_admin_user_bid_path(@user, bid)
