.row
  .span8.well
    %h2 Sign up
    = simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
      = devise_error_messages!
      .inputs
        .row
          .span8
            = f.input :email, :required => true, :autofocus => true
          .span4
            = f.input :password, :required => true, :input_html => {:class => "span4"}
          .span4
            = f.input :password_confirmation, :required => true, :input_html => {:class => "span4"}
          .span4
            = f.input :name, :input_html => {:class => "span4"}
          .span4
            = f.input :nickname, :input_html => {:class => "span4"}
          .span8
            = f.input :description, :as => :text, :input_html => {:class => "span8", :rows => 6}
          .span8
            = f.input :phone_number, :input_html => {:class => "span4"}
          .span4
            = f.input :address, :input_html => {:class => "span4"}
          .span4
            = f.input :city, :input_html => {:class => "span4"}
          .span4
            = f.input :zip, :input_html => {:class => "span4"}
          .span4
            = f.association :state, :input_html => {:class => "span4"}
      .actions
        = f.button :submit, "Sign up"
= render :partial => "devise/shared/links"
