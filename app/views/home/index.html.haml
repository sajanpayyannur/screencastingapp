- unless @slider_items.nil?
  %ul#auction-slider
    - @slider_items.each do |item|
      %li
        .wrapper.clearfix
          = image_tag( item.image, :class => 'image')
          .info
            %h2.title= item.title
            = item.content.html_safe
            %p
              = link_to 'Bid now', item.url, :class => 'btn btn-large'

#auction-slider-pager

= @between_slide.text.html_safe unless @between_slide.nil?

= render 'auctions/auctions'

.text-content
  = @home_page_block.text.html_safe unless @home_page_block.nil?


